<%= simple_form_for @card, url: deck_cards_path(@deck), :html => {:multipart => true} do |f| %>
  <br>
  	<%= f.label t("card.original") %>
  	<p> <%= f.input :original_text, label: false %>
  <br>
  	<%= f.label t("card.translated") %>
  	<p> <%= f.input :translated_text, label: false %>
  <br>

  <br>
      Add picture: 
      <%= f.file_field :pic %>
  <br>     
    <%= f.button :submit %>
    <p> <%= f.full_error :token %>

<% end %>


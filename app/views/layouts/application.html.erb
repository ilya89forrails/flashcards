<head>
  <title>Flashcarder</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>

<body>
  <section id="container">

    <header class="clearfix">
      <h1><%= link_to 'Flashcarder', root_path %></h1>
      <ul class="navigation-links">
       <% if logged_in? %>
          <%= "Logged in as #{current_user.email}" %>
          <%= link_to "Sign out", logout_path %>
          <%= link_to "My account", user_path(current_user) %>
          <% if current_user.has_linked_github? %>
            <%= link_to 'Unlink your GitHub account', delete_oauth_path('github'), method: :delete %>
          <% else %>
            <%= link_to 'Link your GitHub account', auth_at_provider_path(:provider => :github) %>
          <% end %>
        <% else %>
        <li><%= link_to "Sign in", login_path %></li>
        <li><%= link_to 'Login using GitHub', auth_at_provider_path(provider: :github) %></li>
        <% end %>
      </ul>
    </header>

  <%= yield %>

  </section>


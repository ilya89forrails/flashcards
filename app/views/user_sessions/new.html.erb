<h1><%= t("login.sign_in") %></h1>

<%= form_tag user_sessions_path, method: :post do %>
  <div class="field">
    <%= label_tag :email %>
    <%= text_field_tag :email %>
    <br/>
  </div>
  <div class="field">
    <%= label_tag t("login.password") %>
    <%= password_field_tag :password %>
    <br/>
  </div>
  <div class="actions">
    <%= submit_tag t("login.login_btn"), class: "btn btn-large btn-primary" %>
  </div>
<% end %>
<%= t("login.new_user") %>
<%= link_to t("login.sign_up_now"), new_user_path %>
